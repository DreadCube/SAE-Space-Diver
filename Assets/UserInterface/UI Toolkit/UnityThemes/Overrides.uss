.unity-base-dropdown__container-outer {
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
}

.unity-base-dropdown__checkmark {
    -unity-background-image-tint-color: rgba(202, 10, 0, 1);
}

.unity-base-dropdown__container-inner {
    background-color: rgba(0, 0, 0, 0);
    background-image: url('project://database/Assets/UserInterface/3rdParty/Cyberpunk_RPG_UI/UI_Parts/Icon_fr_3_r.png?fileID=2800000&guid=69c1a39440607314c8c09a5ab4c268b7&type=3#Icon_fr_3_r');
}

.unity-base-dropdown__container-inner .unity-base-dropdown__item {
    color: rgb(202, 10, 0);
}

.unity-base-dropdown__container-inner .unity-base-dropdown__item:hover {
    background-color: rgba(0, 0, 0, 0);
}

.unity-base-field:focus > .unity-base-field__label {
    color: rgb(202, 10, 0);
}
